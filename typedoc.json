{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["src/types/index.ts"],
  "entryPointStrategy": "expand",
  "out": "docs/api",
  "excludePrivate": true,
  "excludeProtected": false,
  "includeVersion": true,
  "hideGenerator": false,
  "theme": "default",
  "plugin": [
    "typedoc-plugin-markdown",
    "typedoc-plugin-mermaid"
  ],
  "readme": "README.md",
  "navigationLinks": {
    "GitHub": "https://github.com/rimor-project/rimor",
    "Issues": "https://github.com/rimor-project/rimor/issues"
  },
  "categorizeByGroup": true,
  "sourceLinkTemplate": "https://github.com/rimor-project/rimor/blob/{gitRevision}/{path}#L{line}",
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/node_modules/**"
  ],
  "tsconfig": "./tsconfig.json",
  "name": "Rimor API Documentation",
  "validation": {
    "notExported": false,
    "invalidLink": true,
    "notDocumented": false
  }
}
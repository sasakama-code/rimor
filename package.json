{
  "name": "rimor",
  "version": "0.8.0",
  "description": "テスト品質監査ツール - DIベースアーキテクチャと型ベースセキュリティ解析によるテストの質の検証",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rimor": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy:templates && npm run verify:build",
    "build:clean": "rm -rf dist && npm run build",
    "build:simple": "tsc && npm run copy:templates",
    "build:full": "rm -rf dist && tsc -p tsconfig.build.json && npm run copy:templates && npm run verify:build",
    "build:ci": "tsc -p tsconfig.build.json && npm run copy:templates && npm run verify:build",
    "copy:templates": "mkdir -p dist/reporting/templates && cp -r src/reporting/templates/*.hbs dist/reporting/templates/",
    "verify:build": "node scripts/verify-build.js",
    "lint": "npx tsc --noEmit",
    "test": "NODE_OPTIONS=\"--max-old-space-size=2048\" jest --forceExit --runInBand --detectOpenHandles=false",
    "test:unit": "NODE_OPTIONS=\"--max-old-space-size=1024\" jest test/ --testPathIgnorePatterns=test/integration/ --testPathIgnorePatterns=test/performance/ --forceExit --runInBand",
    "test:integration": "NODE_OPTIONS=\"--max-old-space-size=1536\" jest test/integration/ --forceExit --runInBand --maxWorkers=1",
    "test:performance": "NODE_OPTIONS=\"--max-old-space-size=2048\" jest test/performance/ --forceExit --runInBand --maxWorkers=1",
    "test:full-suite": "npm run test:unit && npm run test:integration",
    "test:coverage": "NODE_OPTIONS=\"--max-old-space-size=2048\" jest --coverage --collectCoverageFrom=\"src/**/*.ts\" --coverageDirectory=\"coverage\" --coverageReporters=\"text\" \"text-summary\" \"lcov\" \"html\"",
    "test:coverage:ci": "NODE_OPTIONS=\"--max-old-space-size=2048\" jest --coverage --collectCoverageFrom=\"src/**/*.ts\" --coverageDirectory=\"coverage\" --coverageReporters=\"text-summary\" \"lcov\" --coverageThreshold='{\"global\":{\"branches\":85,\"functions\":98,\"lines\":95,\"statements\":95}}'",
    "test:shard1": "NODE_OPTIONS=\"--max-old-space-size=1024\" jest --forceExit --runInBand --detectOpenHandles=false --shard=1/3",
    "test:shard2": "NODE_OPTIONS=\"--max-old-space-size=1024\" jest --forceExit --runInBand --detectOpenHandles=false --shard=2/3",
    "test:shard3": "NODE_OPTIONS=\"--max-old-space-size=1024\" jest --forceExit --runInBand --detectOpenHandles=false --shard=3/3",
    "test:shards": "npm run test:shard1 && npm run test:shard2 && npm run test:shard3",
    "test:core-group": "NODE_OPTIONS=\"--max-old-space-size=768\" jest test/core/ test/utils/ --forceExit --runInBand",
    "test:security-group": "NODE_OPTIONS=\"--max-old-space-size=768\" jest test/security/ --forceExit --runInBand",
    "test:dictionary-group": "NODE_OPTIONS=\"--max-old-space-size=768\" jest test/dictionary/ test/analyzers/ --forceExit --runInBand",
    "test:scoring-group": "NODE_OPTIONS=\"--max-old-space-size=768\" jest test/scoring/ test/fixtures/ --forceExit --runInBand",
    "test:cli-group": "NODE_OPTIONS=\"--max-old-space-size=768\" jest test/cli/ test/interactive/ --forceExit --runInBand",
    "test:plugins-group": "NODE_OPTIONS=\"--max-old-space-size=768\" jest test/plugins/ test/ai-output/ --forceExit --runInBand",
    "test:groups": "npm run test:core-group && npm run test:security-group && npm run test:dictionary-group && npm run test:scoring-group && npm run test:cli-group && npm run test:plugins-group",
    "analyze": "node dist/index.js analyze",
    "analyze:json": "node dist/index.js analyze --format=json",
    "analyze:verbose": "node dist/index.js analyze --verbose",
    "analyze:src": "node dist/index.js analyze ./src",
    "analyze:src:json": "node dist/index.js analyze ./src --format=json",
    "analyze:dictionary": "node dist/index.js analyze --dictionary",
    "dictionary:init": "node dist/cli/cli.js dictionary init",
    "dictionary:list": "node dist/cli/cli.js dictionary list",
    "dictionary:validate": "node dist/cli/cli.js dictionary validate",
    "bootstrap:init": "node dist/cli/cli.js bootstrap init",
    "bootstrap:status": "node dist/cli/cli.js bootstrap status",
    "bootstrap:validate": "node dist/cli/cli.js bootstrap validate",
    "dev": "npm run build && npm run analyze:src",
    "full-check": "npm run security-check && npm run analyze:src",
    "security-check": "node scripts/security-check.js",
    "pre-release-check": "bash scripts/pre-release-check.sh",
    "release-ready": "node scripts/release-health-check.js",
    "health-check": "node scripts/release-health-check.js",
    "self-audit": "bash docs/self-audit/scripts/self-audit.sh",
    "self-audit:quick": "bash docs/self-audit/scripts/self-audit.sh --quick",
    "self-audit:security": "bash docs/self-audit/scripts/self-audit.sh --security-only",
    "self-audit:performance": "bash docs/self-audit/scripts/self-audit.sh --performance-only",
    "self-audit:no-history": "echo 'エラー: no-historyオプションは未実装です' && exit 1",
    "self-audit:no-cleanup": "echo 'エラー: no-cleanupオプションは未実装です' && exit 1",
    "self-audit:no-compare": "echo 'エラー: no-compareオプションは未実装です' && exit 1",
    "self-audit:html": "bash docs/self-audit/scripts/self-audit.sh --format html",
    "self-audit:markdown": "bash docs/self-audit/scripts/self-audit.sh --format markdown",
    "self-audit:archive": "bash docs/self-audit/scripts/self-audit.sh --archive",
    "benchmark:arxiv-paper": "NODE_OPTIONS=\"--max-old-space-size=4096\" ts-node scripts/benchmark-arxiv-paper.ts",
    "dev:test": "DISABLE_AI_REPORTER=true jest --watch",
    "ci:local": "CI=true npm run build:full && CI=true npm test",
    "clean:all": "rm -rf dist node_modules coverage temp test-errors-ai.* .jest-cache"
  },
  "keywords": [
    "testing",
    "quality",
    "static-analysis",
    "test-quality",
    "rimor",
    "security",
    "taint-analysis"
  ],
  "author": "Rimor Development Team",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.28.0",
    "@babel/traverse": "^7.28.0",
    "@babel/types": "^7.28.2",
    "@types/glob": "^8.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "franc": "^6.2.0",
    "glob": "^10.4.5",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.12",
    "inversify": "^7.6.1",
    "js-yaml": "^4.1.0",
    "kuromoji": "^0.1.2",
    "ml-kmeans": "^6.0.0",
    "natural": "^6.10.4",
    "reflect-metadata": "^0.2.2",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-typescript": "^0.23.2",
    "typescript": "^5.0.0",
    "yargs": "^17.7.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/natural": "^5.1.2",
    "@types/node": "^20.0.0",
    "@types/yargs": "^17.0.32",
    "jest": "^29.7.0",
    "jest-util": "^29.7.0",
    "ts-jest": "^29.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rimor-project/rimor.git"
  },
  "bugs": {
    "url": "https://github.com/rimor-project/rimor/issues"
  },
  "homepage": "https://github.com/rimor-project/rimor#readme"
}
